{
  "name": "cypescript",
  "displayName": "Cypescript Language Support",
  "description": "Syntax highlighting, IntelliSense, and language support for Cypescript",
  "version": "1.0.0",
  "publisher": "cypescript",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "cypescript",
    "typescript",
    "compiler",
    "llvm",
    "native"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cypescript",
        "aliases": [
          "Cypescript",
          "cypescript"
        ],
        "extensions": [
          ".csc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/cypescript-light.svg",
          "dark": "./icons/cypescript-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "cypescript",
        "scopeName": "source.cypescript",
        "path": "./syntaxes/cypescript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "cypescript",
        "path": "./snippets/cypescript.json"
      }
    ],
    "commands": [
      {
        "command": "cypescript.compile",
        "title": "Compile Cypescript File",
        "category": "Cypescript"
      },
      {
        "command": "cypescript.compileAndRun",
        "title": "Compile and Run",
        "category": "Cypescript"
      },
      {
        "command": "cypescript.compileWithCpp",
        "title": "Compile with C++ Integration",
        "category": "Cypescript"
      },
      {
        "command": "cypescript.openDocs",
        "title": "Open Interactive Documentation",
        "category": "Cypescript"
      }
    ],
    "keybindings": [
      {
        "command": "cypescript.compileAndRun",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus && resourceExtname == .csc"
      },
      {
        "command": "cypescript.compileWithCpp",
        "key": "ctrl+shift+f5",
        "mac": "cmd+shift+f5",
        "when": "editorTextFocus && resourceExtname == .csc"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .csc",
          "command": "cypescript.compileAndRun",
          "group": "cypescript@1"
        },
        {
          "when": "resourceExtname == .csc",
          "command": "cypescript.compileWithCpp",
          "group": "cypescript@2"
        },
        {
          "when": "resourceExtname == .csc",
          "command": "cypescript.openDocs",
          "group": "cypescript@3"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .csc",
          "command": "cypescript.compileAndRun",
          "group": "cypescript@1"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Cypescript Configuration",
      "properties": {
        "cypescript.compilerPath": {
          "type": "string",
          "default": "./build/cscript",
          "description": "Path to the Cypescript compiler"
        },
        "cypescript.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense features"
        },
        "cypescript.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable error diagnostics"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:cypescript"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cypescript"
  },
  "license": "MIT"
}
